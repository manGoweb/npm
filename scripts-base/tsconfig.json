{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es6",
      "scripthost",
      "dom.iterable"
    ],
    "listFiles": true,
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "./lib",
    "sourceMap": true,
    "strict": true,
    "target": "es6"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
